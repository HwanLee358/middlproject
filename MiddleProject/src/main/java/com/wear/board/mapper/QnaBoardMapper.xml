<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wear.board.mapper.QnaBoardMapper">
  <select id="selectQna" resultType="com.wear.board.vo.QnaVO" parameterType="com.wear.board.vo.SearchVO">
    select * from qna where product_no = #{productNo}
  </select>
 
  <insert id="insertQna" parameterType="com.wear.board.vo.QnaVO">
  	insert into qna(post_no, user_id, product_no, post_title, content)
  	values (qna_seq.nextval, #{userId}, #{productNo}, #{postTitle}, #{content})
  </insert>
  
  <update id="updateQna" parameterType="com.wear.board.vo.QnaVO">
  	
  </update>
  <delete id="deleteQna" parameterType="com.wear.board.vo.QnaVO">
  
  </delete>
  
  <select id="QnaList" resultType="com.wear.board.vo.QnaVO" parameterType="int">
  	select * from qna where post_no = #{postNo}
  </select>
  <update id="updateViews" parameterType="int">
  	update qna
  	set views = views + 1
  	where post_no = #{postNo}
  </update>
</mapper>