<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
  <definition name="myapp.homepage" template="/WEB-INF/layout/template.jsp">   
    <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
    <put-attribute name="body" value="/WEB-INF/layout/body.jsp" />
    <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
  </definition>
  
  <definition name="myweb.admin" template="/WEB-INF/admin/template.jsp">
	<put-attribute name="nav" value="/WEB-INF/admin/nav.jsp" />
	<put-attribute name="menu" value="/WEB-INF/admin/menu.jsp" />
	<put-attribute name="content" value="/WEB-INF/admin/content.jsp" />
	<put-attribute name="footer" value="/WEB-INF/admin/footer.jsp" />		
  </definition>
  <definition name="WILDCARD:admin/*" extends="myweb.admin">
		<put-attribute name="content" value="/WEB-INF/admin/{1}.jsp" />
  </definition>
  
  
  
  <!-- Junghwan -->
  <definition name="WILDCARD:wearboard/*" extends="myapp.homepage">
  	<put-attribute name="body" value="/WEB-INF/view/wearboard/{1}.jsp" />
  </definition>
  <definition name="WILDCARD:productorder/*" extends="myapp.homepage">
  	<put-attribute name="body" value="/WEB-INF/view/productorder/{1}.jsp" />
  </definition>
  
  <!-- Yujin -->
  <definition name="WILDCARD:productInfo/*" extends="myapp.homepage">
  	<put-attribute name="body" value="/WEB-INF/view/productInfo/{1}.jsp" />
  </definition>
  <definition name="productInfo.productDetail" extends="myapp.homepage">
    <put-attribute name="body" value="/WEB-INF/view/productInfo/productDetail.jsp" />
  </definition>
  
  <!-- Sunwoo -->
  <definition name="WILDCARD:wishlist/*" extends="myapp.homepage">
  	<put-attribute name="body" value="/WEB-INF/view/wishlist/{1}.jsp" />
  </definition>
  <definition name="WILDCARD:basket/*" extends="myapp.homepage">
  	<put-attribute name="body" value="/WEB-INF/view/basket/{1}.jsp" />
  </definition>
  <definition name="WILDCARD:cerboard/*" extends="myapp.homepage">
  	<put-attribute name="body" value="/WEB-INF/view/cerboard/{1}.jsp" />
  </definition>
  
  <!-- Donggyu -->
  <definition name="WILDCARD:member/*" extends="myapp.homepage">
  	<put-attribute name="body" value="/WEB-INF/view/member/{1}.jsp" />
  </definition>
</tiles-definitions>